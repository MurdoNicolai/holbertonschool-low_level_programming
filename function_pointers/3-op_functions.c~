/**
 *op_add - add int a and int b
 *@a: first operand
 *@b: second operand
 *Return: result
 */
int op_add(int a, int b)
{
	return (a + b);
}
/**
 *op_sub - substract int a and int b
 *@a: first operand
 *@b: second operand
 *Return: result
 */
int op_sub(int a, int b)
{
	return (a - b);
}
/**
 *op_mul - multiply int a and int b
 *@a: first operand
 *@b: second operand
 *Return: result
 */
int op_mul(int a, int b)
{
	return (a * b);
}
/**
 *op_div - divide int a and int b
 *@a: first operand
 *@b: second operand
 *Return: result
 */
int op_div(int a, int b)
{
	if (b == 0)
	{
		printf("Error\n");
		exit(100);
	}
	return (a / b);
}
/**
 *op_mod - modulate int a and int b
 *@a: first operand
 *@b: second operand
 *Return: result
 */
int op_mod(int a, int b)
{
	if (b == 0)
	{
		printf("Error\n");
		exit(100);
	}
	return (a % b);
}
